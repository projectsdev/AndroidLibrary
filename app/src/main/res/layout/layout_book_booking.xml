<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/book"
                android:fontFamily="@font/ubuntu_medium"
                android:text="Signals and SysSignals and SysSignals and SysSignals and SysSignals and SysSignals and SysSignals and Sys"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookname"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/athiti"
                android:text="Author : Jeff George"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/renewable"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/varela"
                android:text="Available : 3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/author"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/biryani_semibold"
                android:text="Published  Year: 1996"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/book"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/renewable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/published"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/ubuntu_light"
                android:text="Renewable" />

            <TextView
                android:id="@+id/sub"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bookname"
                android:layout_marginStart="133dp"
                android:layout_marginTop="67dp"
                android:layout_toEndOf="@+id/available"
                android:background="@drawable/textview_bck"
                android:fontFamily="@font/biryani_semibold"
                android:gravity="center_vertical|center_horizontal"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sub"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="11dp"
                android:layout_toEndOf="@+id/sub"
                android:fontFamily="@font/biryani_semibold"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/bookname"
                android:layout_marginStart="0dp"
                android:layout_marginTop="67dp"
                android:layout_toEndOf="@+id/item_count"
                android:background="@drawable/textview_bck"
                android:gravity="center_horizontal|center_vertical"
                android:text="+" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>